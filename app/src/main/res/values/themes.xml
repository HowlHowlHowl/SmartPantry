<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartPantry" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryVariant">@color/app_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/app_color_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="snackbarStyle">@style/SnackbarStyle</item>
        <item name="snackbarTextViewStyle">@style/MySnackbarTextView</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
    </style>
    <style name="SnackbarStyle" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:background">@drawable/snackbar_background</item>
        <item name="android:text">center</item>
        <item name="android:textColor">@color/app_gray</item>
    </style>
    <style name="MySnackbarTextView" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorAccent">@color/app_color</item>
    </style>
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/app_color</item>
        <item name="android:colorAccent">@color/app_color</item>
    </style>

</resources>